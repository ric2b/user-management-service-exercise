<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>List clients</servlet-name>
        <servlet-class>ListClients</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>List clients</servlet-name>
        <url-pattern>/listClients</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Get client</servlet-name>
        <servlet-class>GetClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Get client</servlet-name>
        <url-pattern>/getClient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search clients</servlet-name>
        <servlet-class>SearchClients</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search clients</servlet-name>
        <url-pattern>/searchClients</url-pattern>
    </servlet-mapping>
</web-app>

